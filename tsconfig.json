{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "lib": ["es5", "es6", "DOM"],
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "paths": {
      "@ecs": ["./src/libs/ecs/index.ts"],
      "@utils": ["./src/libs/utils/index.ts"],
      "@schemas": ["./src/libs/schemas/index.ts"],
      "@mdn-types/canvas": ["./src/libs/mdn-types/canvas/index.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
